{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>
	<div class="header d-flex justify-content-between mt-5 mb-4">
		<h1 class="h3 font-weight-normal">Categories</h1>
		<a href="{{ path('category_create') }}" class="btn btn-success">Create New</a>
	</div>
	{% for message in app.flashes('success') %}
		{% if message is not empty %}
			<div class="alert alert-success" role="alert">
				{{ message }}
			</div>
		{% endif %}
	{% endfor %}
	<ol class="list-group list-group-numbered">
		{% for category in categories %}
			<li class="list-group-item">
				<a href="{{ path('posts_by_category', {'category': category.slug}) }}">{{ category.title }}</a>
			</li>
		{% endfor %}
	</ol>
{% endblock %}

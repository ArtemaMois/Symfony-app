{% extends 'base.html.twig' %}
{% block title %}
	{{ user.name }}
{% endblock %}
{% block body %}
	{# <pre>
							    {{ dump(user) }}
							</pre> #}
	<div class="mb-4 mt-5 d-flex ">
		<img src="{{ asset('uploads/avatars/' ~ user.image)|imagine_filter('avatar_full') }}" alt="Avatar" style="border-radius: 50%;">
		<div class="mt-4 ms-4">
			<div style="font-size: 24px;font-weight:700;" class="mb-3">{{ user.name }}</div>
			<div style="font-size: 24px;font-weight:700;" class="text-secondary">{{ user.email }}</div>
		</div>
	</div>
	<div>
		<p style="font-size: 26px;font-weight: 700;">
			About Me:
		</p>
		<p style="font-size:22px;font-weight: 400;">
			{{user.description}}
		</p>
	</div>
	<div class="div">
		<p style="font-size: 26px;font-weight: 700;">
			Posts:
		</p>
		<div class="list-group list-group-numbered">
			{% for post in user.posts %}
				<a href="{{ path('post_show', {'slug': post.slug}) }}" class="list-group-item list-group-item-action">
					<span style="font-weight: 500;font-size: 20px;color: blue;" class="ms-3">{{ post.title }}</span>
				</a>
			{% endfor %}
		</div>
	</div>
{% endblock %}
